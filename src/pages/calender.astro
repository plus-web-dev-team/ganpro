---
import Layout from "../layouts/Layout.astro";
import Icons from "../components/Icons.astro";
import BreadCrumb from "../components/BreadCrumb.astro";
import MainContentOtherPage from "../components/MainContentOtherPage.astro";
---

<Layout title="弘前大学がんプロ | カレンダー">
    <main>
        <BreadCrumb />
        <div class="calender-wrapper">
            <div id="calendar"></div>
        </div>
        <div class="bg-primary repaet-image">
            <MainContentOtherPage />
        </div>
    </main>
    <Icons />
</Layout>

<style lang="scss">
    .calender-wrapper {
        margin: 6% auto;
        max-width: 992px;
        padding: 0 1rem;
        @media (max-width: 400px) {
            margin: 26% auto;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }
    }
</style>
<script
    is:inline
    src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"
></script>
<script
    is:inline
    src="https://cdn.jsdelivr.net/npm/@fullcalendar/google-calendar@6.1.6/index.global.min.js"
></script>
<script is:inline>
    // カレンダーページ FullCalendar
    document.addEventListener("DOMContentLoaded", () => {
        const calendarEl = document.getElementById("calendar");
        let calendar = new FullCalendar.Calendar(calendarEl, {
            googleCalendarApiKey: "AIzaSyDOZ3METTaI9ZcH0_plw_lasjZ6hyGDTQM",
            events: {
                googleCalendarId: "ganprohirosaki@gmail.com",
            },
        });
        calendar.render();
    });
</script>
