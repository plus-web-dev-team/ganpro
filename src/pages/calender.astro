---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import MainContent from "../components/MainContent.astro";
---

<Layout title="カレンダー">
    <main>
        <div class="bg-primary">
            <div class="top-logo">
                <Logo />
            </div>
        </div>
        <div class="bg-primary repaet-image">
            <div class="main-content">
                <MainContent />
            </div>
        </div>
        <div class="icons">
            <div>
                <a href="">
                    <img src="/public/images/fb.svg" alt="" />
                </a>
                <a href="">
                    <img src="/public/images/calender.svg" alt="" />
                </a>
            </div>
        </div>
    </main>
    <style lang="scss">
        .main-content {
            display: flex;
            flex-flow: row wrap;
            gap: 4%;
            padding: 0 6.25% 7.71875%;
            max-width: 1280px;
            margin: 0 auto;
        }
        .top-logo {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            max-width: 80%;
            margin: 0 auto;
        }
        .icons {
            position: fixed;
            z-index: 20;
            bottom: 30px;
            right: 30px;
            width: 100%;
            @media (max-width: 866px) {
                right: 0;
                padding: 0 16px;
            }
            div {
                display: flex;
                justify-content: flex-end;
                align-items: center;
                gap: 20px;
                height: 50px;
                @media (max-width: 866px) {
                    justify-content: space-between;
                }
                img {
                    width: 30px;
                }
            }
        }
    </style>
</Layout>
