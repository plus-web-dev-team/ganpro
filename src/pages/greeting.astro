---
import Layout from "../layouts/Layout.astro";
import Icons from "../components/Icons.astro";
import BreadCrumb from "../components/BreadCrumb.astro";
import MainContent from "../components/MainContent.astro";
---

<Layout title="弘前大学がんプロ | ごあいさつ">
    <main>
        <BreadCrumb />
        <div class="bg-primary greeting-wrapper">
            <div class="greeting-desc">
                <h2>ごあいさつ</h2>
                <div class="card">
                    <img src="" alt="" class="profile-image" />
                    <p class="profile-title"></p>
                    <h3 class="profile-name"></h3>
                    <p class="profile-desc"></p>
                </div>
                <ul class="profile">
                    <li><a href="#" data-profile="Hirota">研究科長</a></li>
                    <li><a href="#" data-profile="Sato">佐藤教授</a></li>
                    <li><a href="#" data-profile="Kurose">黒瀬教授</a></li>
                    <li><a href="#" data-profile="Aoki">青木教授</a></li>
                </ul>
            </div>
        </div>
        <div class="bg-primary repaet-image">
            <MainContent />
        </div>
    </main>
    <Icons />
</Layout>

<style lang="scss">
    .greeting-desc {
        max-width: 1280px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 6.12%;
        h2 {
            font-size: clamp(2rem, 1.171rem + 3.54vw, 4rem);
            font-weight: 300;
            text-align: center;
            color: var(--secondary-color);
            margin-bottom: 10%;
        }
        .card {
            max-width: 768px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            background-color: white;
            padding: 4rem;
            @media (max-width: 768px) {
                max-width: 425px;
                padding: 2rem;
            }
            border-radius: 10px;
            .profile-image {
                border-radius: 50%;
                margin-top: -20%;
                margin-bottom: 16px;
                @media (max-width: 768px) {
                    width: 60%;
                }
            }
            .profile-title {
                font-size: 12px;
                letter-spacing: 1.8px;
            }
            .profile-name {
                font-size: 26px;
                letter-spacing: 1.8px;
                margin-bottom: 24px;
            }
            .profile-desc {
                max-width: 765px;
                font-size: 16px;
                letter-spacing: 1.8px;
                @media (max-width: 768px) {
                    height: 250px;
                    overflow: scroll;
                }
            }
        }
        ul {
            margin: 24px 0 0;
            padding: 0;
            list-style-type: none;
            display: flex;
            justify-content: space-between;
            width: 425px;
            font-weight: 500;
            a {
                text-decoration: none;
                color: var(--secondary-color);
            }
            @media (max-width: 425px) {
                width: 100%;
            }
        }
    }
</style>
